@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - portfolio</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    @* <link rel="stylesheet" href="~/portfolio.styles.css" asp-append-version="true" /> *@

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        .nav-item a:hover , .nav-item form:hover{
            background-color: skyblue;
        }
        .nav-item a , .nav-item form{
            background-color: white;
            box-shadow: 1px 1px 3px gray, -1px -1px 3px gray;
        }
    </style>

</head>
<body>


    <div class="d-flex flex-column">
        <!-- Header Section with Box Shadow -->
        <nav class="card shadow-lg">
            <div class="container-fluid">
                <div class="navbar navbar-expand-sm navbar-light">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="">
                            <a class="nav-link active" aria-current="page" href="/Admin">Group 5</a>
                        </li>
                        
                    </ul>
                    <div class="d-flex justify-content-between">
                        <div class="dropdown">
                            <a href="#" role="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/no_profile.png" style="width: 30px !important" class="rounded-circle">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" action="/Account/Logout">
                                        <button type="submit" class="dropdown-item text-danger" style="border: none; background: none;" onclick="return confirm('Are you sure you want to log out?')">
                                            Logout
                                        </button>
                                    </form>

                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </nav>


        <!-- Main Layout: Sidebar + Content -->
        <div class="d-flex flex-nowrap">
            <!-- Sidebar (Card-like) with Box Shadow -->
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0" style="padding-left: 0 !important">
                <div class="card shadow-lg border-0 rounded-3 h-100">
                    <div class="card-body p-0">
                        <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-dark min-vh-100">
                            <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu" style="width: 100% !important">
                                <li class="nav-item text-left align-center my-1" style="width: 100% !important">
                                    <a href="/Admin" class="nav-link align-middle px-2 pb-1 px-0 @(Context.Request.Path == "/Admin" ? "active" : "")" style="padding: 0">
                                        <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                                    </a>
                                </li>
                                <li class="nav-item text-left align-center my-1" style="width: 100% !important">
                                    <a href="/Members" class="nav-link align-middle px-2 pb-1 px-0 @(Context.Request.Path == "/Members" ? "active" : "")" style="padding: 0">
                                        <i class="fs-4 bi bi-gear"></i> <span class="ms-1 d-none d-sm-inline">Member</span>
                                    </a>
                                </li>
                                <li class="nav-item text-left align-center my-1" style="width: 100% !important">
                                    <a href="/Settings" class="nav-link align-middle px-2 pb-1 px-0 @(Context.Request.Path == "/Settings" ? "active" : "")" style="padding: 0">
                                        <i class="fs-4 bi bi-gear"></i> <span class="ms-1 d-none d-sm-inline">Setting</span>
                                    </a>
                                </li>
                                <li class="nav-item text-left align-center my-1" style="width: 100% !important">
                                    <a href="/Users" class="nav-link align-middle px-2 pb-1 px-0 @(Context.Request.Path == "/Users" ? "active" : "")" style="padding: 0">
                                        <i class="fs-4 bi bi-person-bounding-box"></i> <span class="ms-1 d-none d-sm-inline">Users</span>
                                    </a>
                                </li>
                                <li class="nav-item text-left align-center my-1" style="width: 100% !important">
                                    <form method="post" action="/Account/Logout" class="nav-link align-middle px-2 pb-1 px-0" style="padding: 0">
                                        <button type="submit" class="dropdown-item text-danger" style="border: none; background: none;" onclick="return confirm('Are you sure you want to log out?')">
                                            <i class="fs-4 bi bi-box-arrow-right"></i>
                                            Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Content Area -->
            <div class="col py-3">
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                        @RenderSection("Scripts", required: false)
                    </main>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap 5 JS (Ensure this is in _Layout.cshtml or your master page) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
